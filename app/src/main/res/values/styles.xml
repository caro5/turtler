<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="FragmentTextViewLabel" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/subheading_size</item>
        <item name="android:textColor">@color/labelDarkGrey</item>
    </style>
    <style name="EditTextView" parent="android:Widget.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/subheading_size</item>
        <item name="android:textColorHint">@color/labelLightGrey</item>
    </style>
    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>
    <style name="ProfileFragmentTheme">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_left</item>
    </style>

</resources>
